{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "../dist/server",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["./**/*.ts"],
  "ts-node": {
    "esm": true
  }
}